# Fact-Checking Research Project Configuration
# Copy this file to .env and fill in your actual values

# Base Directories
BASE_DATA_DIR=/path/to/your/data
CACHE_DIR=/path/to/your/cache
SCRATCH_DIR=/path/to/your/scratch
OUTPUT_DIR=/path/to/your/output

# API Keys and Tokens
HUGGINGFACE_TOKEN=your_huggingface_token_here
GROQ_API_KEY=your_groq_api_key_here

# Model Configuration
EMBEDDING_MODEL=kamalkraj/BioSimCSE-BioLinkBERT-BASE
LLM_MODEL=mistralai/Mistral-Large-Instruct-2411

# Processing Configuration
MAX_RETRIES=3
THROTTLE_DELAY=1.0
BATCH_SIZE=1000
TEMPERATURE=0.0
