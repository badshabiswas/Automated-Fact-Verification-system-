# SLURM/Cluster Configuration (for HPC environments)
SLURM_PARTITION=gpu
SLURM_QOS=gpu
SLURM_TIME=24:00:00
SLURM_MEMORY=100GB
SLURM_GPU_TYPE=A100.80gb:1 